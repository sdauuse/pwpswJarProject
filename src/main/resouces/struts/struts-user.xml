<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="student" namespace="/user" extends="common">
        <!-- 通配符 方式
       采用 struts2 和spring整合方案1，action由spring来管理，在class上指定spring容器中action的bean id
       请求add.action，*匹配了add，{1}表示第一个匹配串
   -->

        <action name="*"  class="userAction" method="{1}">
           <!-- <result name="success">/jsp/success.jsp</result>-->
            <result name="verifyError">/login/login.html</result>
            <result type="redirect" name="verifySuccess">/jsps/success.jsp</result>
        </action>
    </package>

</struts>